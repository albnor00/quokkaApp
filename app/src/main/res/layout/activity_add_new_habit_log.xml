<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <!-- Back Button -->
    <ImageView
        android:id="@+id/img_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:src="@drawable/baseline_arrow_back_ios_new_24"
        android:layout_marginStart="1dp"
        android:layout_marginTop="1dp" />

    <TextView
        android:id="@+id/text_finish_top"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Create New Log"
        android:textSize="24sp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp" />


    <TextView
        android:id="@+id/text_view_habit_question"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/text_finish_top"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:text="Did you complete your habit today?"
        android:textSize="18sp" />

    <Button
        android:id="@+id/button_yes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/text_view_habit_question"
        android:layout_marginStart="60dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="8dp"
        android:text="Yes" />

    <Button
        android:id="@+id/button_no"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/text_view_habit_question"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="60dp"
        android:layout_marginTop="20dp"
        android:text="No" />

    <EditText
        android:id="@+id/edit_text_notes_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/button_yes"
        android:hint="Enter Notes"
        android:layout_marginTop="20dp"
        android:inputType="textMultiLine"
        android:maxLines="10"
        android:scrollbars="vertical"
        android:padding="12dp"/>

</RelativeLayout>