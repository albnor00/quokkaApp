<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Back Button -->
    <ImageView
        android:id="@+id/img_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:src="@drawable/baseline_arrow_back_ios_new_24" />

    <TextView
        android:id="@+id/text_overview_top"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Goal Overview"
        android:textSize="24sp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp" />


    <ImageView
        android:id="@+id/settings"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="16dp"
        android:src="@drawable/baseline_settings_24" />

    <TextView
        android:id="@+id/question1_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/img_back"
        android:layout_marginStart="20dp"
        android:layout_marginTop="24dp"
        android:text="1. What you are working to better:"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/answer1_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/question1_textview"
        android:layout_marginStart="20dp"
        android:layout_marginTop="8dp"
        android:text="Answer 1"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/question2_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/answer1_textview"
        android:layout_marginStart="20dp"
        android:layout_marginTop="16dp"
        android:text="2. Your satisfaction with the chosen aspect (1-10):"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/answer2_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/question2_textview"
        android:layout_marginStart="20dp"
        android:layout_marginTop="8dp"
        android:text="Answer 2"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/question3_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/answer2_textview"
        android:layout_marginStart="20dp"
        android:layout_marginTop="16dp"
        android:text="3. Your explanation for the rating of the last question:"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/answer3_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/question3_textview"
        android:layout_marginStart="20dp"
        android:layout_marginTop="8dp"
        android:text="Answer 3"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/question4_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/answer3_textview"
        android:layout_marginStart="20dp"
        android:layout_marginTop="16dp"
        android:text="4. The rating you want to reach for in the future:"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/answer4_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/question4_textview"
        android:layout_marginStart="20dp"
        android:layout_marginTop="8dp"
        android:text="Answer 4"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/question5_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/answer4_textview"
        android:layout_marginStart="20dp"
        android:layout_marginTop="16dp"
        android:text="5. How you think you will feel in the future once you have reached your goal:"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/answer5_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/question5_textview"
        android:layout_marginStart="20dp"
        android:layout_marginTop="8dp"
        android:text="Answer 5"
        android:textSize="16sp" />

    <Button
        android:id="@+id/rate_satisfaction_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="24dp"
        android:layout_marginBottom="10dp"
        android:layout_centerHorizontal="true"
        android:text="Log Your Satisfaction" />
</RelativeLayout>