<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/baseline_arrow_back_ios_new_24"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        />
    <ImageView
        android:id="@+id/finish"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="340dp"
        android:layout_marginTop="20dp"
        app:srcCompat="@drawable/baseline_check"
        />
    <TextView
        android:clickable="false"
        android:layout_marginLeft="100dp"
        android:layout_marginRight="100dp"
        android:layout_marginTop="10dp"
        android:id="@+id/text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Finish"
        android:textSize="20sp"
        android:textStyle="bold"
        />

    <!-- Habit Template -->

    <androidx.appcompat.widget.AppCompatButton
        android:layout_below="@+id/text"
        android:id="@+id/goal"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="32dp"
        android:layout_marginBottom="1dp"
        android:background="@drawable/btn_background_1"
        android:drawableStart="@drawable/baseline_place_24"
        android:drawablePadding="20dp"
        android:paddingStart="20dp"
        android:text="Goal"
        android:textSize="18sp"
        android:textStyle="bold"
        style="@android:style/Widget.Button"
        android:textAlignment="viewStart"  />

    <TextView
        android:id="@+id/goalTime"
        android:clickable="false"
        android:layout_width="100dp"
        android:background="@drawable/btn_background_1"
        android:layout_height="wrap_content"
        android:text="1 Time"
        style="@android:style/Widget.Button"
        android:layout_marginLeft="250dp"
        android:layout_marginTop="100dp"
        android:elevation="4dp"
        android:textStyle="bold"
        />

    <!-- Average Template -->
    <androidx.appcompat.widget.AppCompatButton
        android:layout_below="@+id/goal"
        android:id="@+id/timePeriod"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="32dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/btn_background_1"
        android:drawableStart="@drawable/baseline_access_time"
        android:drawablePadding="20dp"
        android:paddingStart="20dp"
        android:text="Time Period"
        android:textSize="18sp"
        android:textStyle="bold"
        style="@android:style/Widget.Button"
        android:textAlignment="viewStart" />
    <TextView
        android:id="@+id/perDay"
        android:clickable="false"
        android:layout_width="100dp"
        android:background="@drawable/btn_background_1"
        android:layout_height="wrap_content"
        android:text="Per Day"
        style="@android:style/Widget.Button"
        android:layout_marginLeft="250dp"
        android:layout_marginTop="150dp"
        android:elevation="4dp"
        android:textStyle="bold"
        />


    <!-- Target Template -->
    <androidx.appcompat.widget.AppCompatButton
        android:layout_below="@+id/timePeriod"
        android:id="@+id/startDate"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="32dp"
        android:layout_marginBottom="1dp"
        android:background="@drawable/btn_background_1"
        android:drawableStart="@drawable/baseline_date_range"
        android:drawablePadding="20dp"
        android:paddingStart="20dp"
        android:text="Start Date"
        android:textSize="18sp"
        android:textStyle="bold"
        style="@android:style/Widget.Button"
        android:textAlignment="viewStart" />

    <TextView
        android:id="@+id/date"
        android:clickable="false"
        android:layout_width="100dp"
        android:background="@drawable/btn_background_1"
        android:layout_height="wrap_content"
        android:text="Date"
        style="@android:style/Widget.Button"
        android:layout_marginLeft="250dp"
        android:layout_marginTop="220dp"
        android:elevation="4dp"
        android:textStyle="bold"
        />


    <androidx.appcompat.widget.AppCompatButton
        android:layout_below="@+id/startDate"
        android:id="@+id/due"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="32dp"
        android:layout_marginBottom="1dp"
        android:background="@drawable/btn_background_1"
        android:drawableStart="@drawable/baseline_check_box"
        android:drawablePadding="20dp"
        android:paddingStart="20dp"
        android:text="Due"
        android:textSize="18sp"
        android:textStyle="bold"
        style="@android:style/Widget.Button"
        android:textAlignment="viewStart" />

    <TextView
        android:id="@+id/dueDay"
        android:clickable="false"
        android:layout_width="100dp"
        android:background="@drawable/btn_background_1"
        android:layout_height="wrap_content"
        android:text="Every Day"
        style="@android:style/Widget.Button"
        android:layout_marginLeft="250dp"
        android:layout_marginTop="275dp"
        android:elevation="4dp"
        android:textStyle="bold"
        />


    <androidx.appcompat.widget.AppCompatButton
        android:layout_below="@+id/due"
        android:id="@+id/reminders"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="32dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/btn_background_1"
        android:drawableStart="@drawable/baseline_notifications_24"
        android:drawablePadding="20dp"
        android:paddingStart="20dp"
        android:text="Reminders"
        android:textSize="18sp"
        android:textStyle="bold"
        style="@android:style/Widget.Button"
        android:textAlignment="viewStart" />

    <TextView
        android:id="@+id/time"
        android:clickable="false"
        android:layout_width="100dp"
        android:background="@drawable/btn_background_1"
        android:layout_height="wrap_content"
        android:text="6:00 PM"
        style="@android:style/Widget.Button"
        android:layout_marginLeft="250dp"
        android:layout_marginTop="325dp"
        android:elevation="4dp"
        android:textStyle="bold"
        />

    <!-- Bottom navigation -->

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <FrameLayout
            android:id="@+id/frame_layout"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintBottom_toTopOf="@+id/bottomNavigationView"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

        </FrameLayout>

        <com.google.android.material.bottomnavigation.BottomNavigationView
            android:id="@+id/bottomNavigationView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:menu="@menu/bottom_nav_menu"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</RelativeLayout>