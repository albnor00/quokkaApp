<!-- circle_shape.xml -->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Transparent inside the circle -->
    <item>
        <shape
            android:shape="oval">
            <solid android:color="@android:color/transparent" />
            <stroke
                android:width="1dp"
                android:color="#00FF00" />
            <size
                android:width="48dp"
                android:height="48dp" />
        </shape>
    </item>

    <!-- Check mark icon with increased size -->
    <item
        android:drawable="@drawable/check_mark_green"
        android:gravity="center"
        android:width="54dp"
        android:height="54dp"
        />
</layer-list>